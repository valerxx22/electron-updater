{
  "name": "electron-updater",
  "author": {
    "name": "Nutaku",
    "email": "support@nutaku.net",
    "url": "https://www.nutaku.net"
  },
  "version": "1.0.2",
  "description": "Electron auto updater example",
  "main": "src/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "release": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valerxx22/electron-updater.git"
  },
  "devDependencies": {
    "electron": "^9.0.3",
    "electron-builder": "^22.7.0"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "electron-updater": "^4.3.1"
  },
  "build": {
    "productName": "Nutaku",
    "appId": "org.develar.Nutaku",
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "certificateFile": "private/ClientCert.p12",
      "timeStampServer": "http://timestamp.globalsign.com/scripts/timstamp.dll",
      "verifyUpdateCodeSignature": true,
      "publisherName": "Nutaku Entertainment Ltd.",
      "target": [
        "nsis"
      ],
      "publish": [
        {
          "provider": "generic",
          "url": "http://127.0.0.1/release"
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "differentialPackage": false,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": true,
      "shortcutName": "Electron Updater"
    },
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "nutaku",
      "repo": "nutaku-client",
      "private": false
    }
  },
  "homepage": "https://github.com/valerxx22/electron-updater.git",
  "keywords": []
}
